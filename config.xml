<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tools.voyagemonitor" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>STT Voyage Monitor v0.1.0</name>
    <description>Companion for Star Trek Timelines for monitoring voyage status</description>
    <author email="" href="https://github.com/IAmPicard/StarTrekTimelinesSpreadsheet">IAmPicard</author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="windows-target-version" value="10.0" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <engine name="browser" spec="^5.0.0" />
    <engine name="windows" spec="^5.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
</widget>
